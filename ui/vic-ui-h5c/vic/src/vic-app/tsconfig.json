{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./tsc-results",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "jasmine",
      "node",
      "core-js",
      "source-map",
      "uglify-js",
      "webpack"
    ]
  },
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  },
  "filesGlob": [
    "./src/**/*.ts",
    "!./src/**/*.spec.ts",
    "!./node_modules/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
